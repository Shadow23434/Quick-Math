<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           styleClass="loading-overlay"
           visible="false" managed="false">
    <!-- Semi-transparent background covers parent -->
    <children>
        <Region style="-fx-background-color: rgba(0,0,0,0.55);"/>
        <VBox alignment="CENTER" spacing="10" maxWidth="400" maxHeight="200">
            <!-- Use a CSS class so color is set from stylesheet -->
            <ProgressIndicator styleClass="loading-spinner" prefWidth="48" prefHeight="48" />
            <Label fx:id="loadingMessage" text="Loading..." styleClass="loading-message" />
        </VBox>
    </children>
</StackPane>
