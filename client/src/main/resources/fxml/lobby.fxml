<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mathspeed.controller.LobbyController">
    <!-- Floating Reload Button (Dev Mode) -->
    <Button fx:id="reloadButton"
            text="🔄"
            onAction="#handleReload"
            styleClass="reload-button, floating-button"
            StackPane.alignment="TOP_RIGHT"
            mouseTransparent="false">
        <StackPane.margin>
            <Insets top="15" right="15"/>
        </StackPane.margin>
        <tooltip>
            <Tooltip text="Reload (F5)"/>
        </tooltip>
    </Button>

    <!-- Main Content -->
    <VBox alignment="CENTER"
          spacing="20"
          styleClass="root"
          StackPane.alignment="CENTER">

        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <Label fx:id="welcomeLabel"
               text="Đang tải..."
               styleClass="title"/>

        <Label text="Màn hình Lobby sẽ được thiết kế sau"
               styleClass="subtitle"/>
    </VBox>
</StackPane>
