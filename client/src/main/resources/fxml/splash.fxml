<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mathspeed.controller.SplashController"
            prefHeight="640.0" prefWidth="360.0"
            styleClass="splash-root">
    <VBox alignment="CENTER"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <ImageView fx:id="logoImage"
                   fitWidth="150" fitHeight="150"
                   pickOnBounds="true"
                   preserveRatio="true"
                   styleClass="splash-logo"/>
        <Label fx:id="titleLabel"
               text="QuickMath"
               styleClass="splash-title"/>
        <StackPane fx:id="spinnerPane"
              minWidth="50" minHeight="50" maxWidth="50" maxHeight="50"
              prefWidth="50" prefHeight="50">
            <VBox.margin>
                <Insets top="40"/>
            </VBox.margin>
        </StackPane>
    </VBox>
</AnchorPane>
