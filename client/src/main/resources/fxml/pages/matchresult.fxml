<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mathspeed.controller.MatchResultController"
           prefWidth="480"
           prefHeight="360">

    <VBox spacing="16" alignment="CENTER" style="-fx-padding:20;">
        <!-- Winner / Result -->
        <Label fx:id="winnerLabel"
               text="Kết quả trận đấu"
               style="-fx-font-size:20px; -fx-font-weight:600;"/>

        <!-- Summary line (e.g. Alice 3 - 1 Bob) -->
        <Label fx:id="summaryLabel"
               text="Bạn thắng"
               style="-fx-font-size:14px; -fx-text-fill:#555555;"/>

        <HBox spacing="20" alignment="CENTER">
            <!-- Local / Player A -->
            <VBox spacing="6" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                <Label fx:id="playerNameLabel" text="Bạn" styleClass="player-label"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Số câu đúng:" style="-fx-font-size:12px;"/>
                    <Label fx:id="playerScoreLabel" text="0" styleClass="score-text"/>
                </HBox>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Tổng thời gian:" style="-fx-font-size:12px;"/>
                    <Label fx:id="totalPlayerTime" text="00:30" style="-fx-font-size:14px; -fx-font-weight:600;"/>
                </HBox>
            </VBox>

            <Separator orientation="VERTICAL" prefHeight="120"/>

            <!-- Opponent / Player B -->
            <VBox spacing="6" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                <Label fx:id="opponentNameLabel" text="Đối thủ" styleClass="opponent-label"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Số câu đúng:" style="-fx-font-size:12px;"/>
                    <Label fx:id="opponentScoreLabel" text="0" styleClass="score-text"/>
                </HBox>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Tổng thời gian:" style="-fx-font-size:12px;"/>
                    <Label fx:id="totalOpponentTime" text="00:00" style="-fx-font-size:14px; -fx-font-weight:600;"/>
                </HBox>
            </VBox>
        </HBox>

        <Region prefHeight="8"/>

        <HBox spacing="12" alignment="CENTER">
            <Button text="Đóng" onAction="#onBackToHome" prefWidth="120"/>
        </HBox>
    </VBox>
</StackPane>