<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mathspeed.controller.LibraryController"
      styleClass="light-container">
    <!-- Header Section (Separated Component) -->
    <fx:include fx:id="dashboardHeader"
                source="../component/header.fxml"
                VBox.vgrow="NEVER"/>

    <!-- Main Content Scrolls Below Header -->
    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="ALWAYS"
                styleClass="dashboard-scroll-pane"
                VBox.vgrow="ALWAYS">
        <VBox spacing="20" prefWidth="320" style="-fx-padding: 0 0 20 0;" alignment="TOP_CENTER">
            <!-- Page Title -->
            <Label text="My Library" styleClass="section-title" style="-fx-font-size: 24px; -fx-font-weight: bold;">
                <VBox.margin>
                    <Insets top="20" left="20" right="20" bottom="0"/>
                </VBox.margin>
            </Label>

            <!-- Categories Tabs -->
            <HBox spacing="10" alignment="CENTER">
                <VBox.margin>
                    <Insets left="20" right="20"/>
                </VBox.margin>
                <Button fx:id="allQuizzesBtn" text="All Quizzes" styleClass="category-button, category-button-active" onAction="#handleAllQuizzes"/>
                <Button fx:id="myQuizzesBtn" text="My Quizzes" styleClass="category-button" onAction="#handleMyQuizzes"/>
                <Button fx:id="favoritesBtn" text="Favorites" styleClass="category-button" onAction="#handleFavorites"/>
            </HBox>

            <!-- Quiz Container (FlowPane for responsive grid) -->
            <FlowPane fx:id="quizContainer"
                      hgap="15"
                      vgap="15"
                      alignment="CENTER"
                      prefWrapLength="320"
                      style="-fx-padding: 0 20 20 20;">
                <!-- Quiz cards will be added dynamically -->
            </FlowPane>
        </VBox>
    </ScrollPane>
</VBox>
