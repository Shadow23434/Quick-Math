<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mathspeed.controller.PolicyController" styleClass="container">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>
                <BorderPane styleClass="header-section" VBox.vgrow="NEVER">
                    <left>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Button fx:id="backButton" styleClass="icon-button" onAction="#handleBack">
                                <graphic>
                                    <FontIcon iconLiteral="fas-chevron-left" styleClass="header-icon"/>
                                </graphic>
                            </Button>
                        </HBox>
                    </left>
                    <center>
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <Label text="Privacy &amp; Policy" styleClass="user-display-name" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: -text-light" />
                        </HBox>
                    </center>
                </BorderPane>
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                    <content>
                        <TextArea fx:id="policyTextArea" prefRowCount="20" wrapText="true" editable="false" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
