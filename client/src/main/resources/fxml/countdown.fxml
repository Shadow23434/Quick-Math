<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  CountDownOverlay.fxml
  - A standalone overlay that displays a countdown number and a label.
  - Controller (optional) can be GameController or a small dedicated controller.
  - Designed to be placed on top of GamePlay or shown/hidden by parent.
-->
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="countdownOverlay"
           style="-fx-background-color: rgba(0,0,0,0.55);"
           prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="8" style="-fx-padding: 24;">
        <Label text="Bắt đầu trong" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
        <Label fx:id="countdownLabel" text="5" style="-fx-text-fill: white; -fx-font-size: 64px; -fx-font-weight: bold;"/>
    </VBox>
</StackPane>