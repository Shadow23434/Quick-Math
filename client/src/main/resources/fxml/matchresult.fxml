<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mathspeed.controller.MatchResultController"
           fx:id="matchResultRoot"
           pickOnBounds="false"
           visible="false" managed="false"
           style="-fx-background-color: rgba(0,0,0,0.65);">

    <!-- Background image (full overlay) -->
    <ImageView fx:id="matchResultBackground"
               preserveRatio="false"
               smooth="true"
               pickOnBounds="false"
               opacity="0.95">
        <image>
            <Image url="@/images/Shadow.png"/>
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="18" style="-fx-padding: 28;">
        <!-- Card -->
        <VBox alignment="CENTER" spacing="12"
              style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.06), rgba(255,255,255,0.03)); -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 20, 0,0,6); -fx-padding: 20;">
            <!-- Title -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="KẾT QUẢ TRẬN ĐẤU"
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: 800;"/>
            </HBox>

            <!-- Winner / loser row -->
            <HBox alignment="CENTER" spacing="28" style="-fx-padding: 6 12;">
                <!-- Winner (bigger star, more prominent) -->
                <VBox alignment="CENTER" spacing="8" style="-fx-pref-width: 360;">
                    <ImageView fx:id="winnerStarImage" fitWidth="120" fitHeight="120" pickOnBounds="false" preserveRatio="true"
                               style="-fx-effect: dropshadow(three-pass-box, rgba(255,215,100,0.45), 20, 0.0, 0, 6);">
                        <image>
                            <Image url="@/images/star_gold.png"/>
                        </image>
                    </ImageView>
                    <Label fx:id="winnerNameLabel" text="Người thắng" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: 800;"/>
                    <Label text="Điểm:" style="-fx-text-fill: #dbeaff;"/>
                    <Label fx:id="winnerScoreLabel" text="10" style="-fx-text-fill: #fff; -fx-font-size: 22px; -fx-font-weight: 800;"/>
                    <Label text="Thời gian tổng:" style="-fx-text-fill: #dbeaff; -fx-padding: 6 0 0 0;"/>
                    <Label fx:id="winnerTotalTimeLabel" text="45.3s" style="-fx-text-fill: #fff;"/>
                </VBox>

                <!-- Divider -->
                <Rectangle width="1" height="200" fill="rgba(255,255,255,0.06)"/>

                <!-- Loser (smaller, dimmer star) -->
                <VBox alignment="CENTER" spacing="8" style="-fx-pref-width: 300;">
                    <ImageView fx:id="loserStarImage" fitWidth="84" fitHeight="84" pickOnBounds="false" preserveRatio="true"
                               style="-fx-opacity: 0.85; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 8, 0.0, 0, 2);">
                        <image>
                            <Image url="@/images/star_grey.png"/>
                        </image>
                    </ImageView>
                    <Label fx:id="loserNameLabel" text="Đối thủ" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                    <Label text="Điểm:" style="-fx-text-fill: #dbeaff;"/>
                    <Label fx:id="loserScoreLabel" text="7" style="-fx-text-fill: #fff; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                    <Label text="Thời gian tổng:" style="-fx-text-fill: #dbeaff; -fx-padding: 6 0 0 0;"/>
                    <Label fx:id="loserTotalTimeLabel" text="48.7s" style="-fx-text-fill: #fff;"/>
                </VBox>
            </HBox>

            <!-- Footer: buttons -->
            <HBox alignment="CENTER" spacing="12" style="-fx-padding: 6 0 0 0;">
                <Button fx:id="closeResultButton" text="Đóng" onAction="#handleCloseResult" styleClass="cancel-button"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>